<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:orientation="vertical"
    android:background="@color/baseclor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/nanum_style"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textSize="50sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="@color/white">

        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름: "
            android:textSize="17sp"
            android:layout_margin="20dp"
            android:id="@+id/tv_NN1"
            />
        <EditText
            android:id="@+id/submit_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:maxLength="24"
            android:layout_alignLeft="@id/submit_Email"
            android:layout_alignBaseline="@+id/tv_NN1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="17sp"
            android:layout_margin="20dp"
            android:id="@+id/tv_NN2"
            android:layout_below="@id/tv_NN1"
            />
        <EditText
            android:id="@+id/submit_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:textSize="10sp"
            android:maxLines="1"
            android:maxLength="30"
            android:layout_toRightOf="@id/tv_NN2"
            android:layout_alignBaseline="@+id/tv_NN2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/submit_Email">
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="제출"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>