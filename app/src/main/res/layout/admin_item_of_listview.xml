<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/borderline_bottom_bold"
    android:layout_height="wrap_content">
    <TextView
        android:paddingTop="5dp"
        android:id="@+id/item_title"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#880000"
        android:fontFamily="@font/nanum_style"
        android:text="핸젤과 그레텔"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingLeft="20dp"
            android:background="@drawable/borderline_bottom_right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="반납기한:"
                android:paddingBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/admin_item_duedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:text="2022-03-04"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borderline_bottom">
            <TextView
                android:id="@+id/tv_NNN1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재위치:"/>
            <TextView
                android:id="@+id/admin_current_location"
                android:layout_alignLeft="@id/admin_right_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~층"/>
            <TextView
                android:id="@+id/tv_NNN3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_NNN1"
                android:paddingBottom="10dp"
                android:text="올바른 위치:"/>
            <TextView
                android:id="@+id/admin_right_location"
                android:layout_toRightOf="@+id/tv_NNN3"
                android:layout_alignBaseline="@id/tv_NNN3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~층"
                android:paddingBottom="10dp"
                android:layout_marginLeft="15dp"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>