<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity"
    android:orientation="vertical"
    android:background="@color/baseclor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/nanum_style"
        android:gravity="center"
        android:text="회원 탈퇴"
        android:textSize="50sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="17sp"
            android:layout_margin="20dp"
            android:id="@+id/WD_1"
            />
        <EditText
            android:id="@+id/WD_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:textSize="10sp"
            android:layout_marginLeft="45dp"
            android:maxLines="1"
            android:maxLength="30"
            android:layout_toRightOf="@id/WD_1"
            android:layout_alignBaseline="@+id/WD_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW: "
            android:textSize="17sp"
            android:layout_margin="20dp"
            android:id="@+id/WD_2"
            android:layout_below="@id/WD_1"
            />
        <EditText
            android:id="@+id/WD_PW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:maxLength="24"
            android:layout_alignLeft="@id/WD_Email"
            android:layout_alignBaseline="@+id/WD_2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/WD_PW">
            <Button
                android:id="@+id/btn_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="회원 탈퇴"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>